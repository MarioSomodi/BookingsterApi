{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["prettier", "airbnb", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": ["/dist"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "crlf"
      }
    ],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "func-names": "off",
    "object-shorthand": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "object-curly-newline": "off",
    "no-param-reassign": "off",
    "operator-linebreak": "off",
    "comma-dangle": "off",
    "linebreak-style": "off"
  }
}
